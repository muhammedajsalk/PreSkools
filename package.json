{
  "name": "kinder-connect-root",
  "private": true,
  "workspaces": [
    "client",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",

    "dev:all": "concurrently \"npm run dev:client\" \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:student\" \"npm run dev:activity\" \"npm run dev:chat\" \"npm run dev:billing\" \"npm run dev:notification\" \"npm run dev:ai\"",

    "dev:client": "npm run dev --workspace=client",
    "dev:gateway": "npm run dev --workspace=services/api-gateway",
    "dev:auth": "npm run dev --workspace=services/auth-service",
    "dev:user": "npm run dev --workspace=services/user-service",
    "dev:student": "npm run dev --workspace=services/student-service",
    "dev:activity": "npm run dev --workspace=services/activity-service",
    "dev:chat": "npm run dev --workspace=services/chat-service",
    "dev:billing": "npm run dev --workspace=services/billing-service",
    "dev:notification": "npm run dev --workspace=services/notification-service",
    "dev:ai": "npm run dev --workspace=services/ai-service"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.3",
    "turbo": "^1.13.4"
  }
}